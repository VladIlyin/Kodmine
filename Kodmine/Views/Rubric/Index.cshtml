@model IEnumerable<Kodmine.Model.Models.Rubric>

@{
    ViewData["Title"] = "Rubric";
}

<br />
<div class="btn-group">
    <a asp-controller="Rubric" asp-action="Create" class="btn">
        <i class="icon-plus"></i> <span>Добавить</span>
    </a>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Действие</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {

    <tr>
        <th scope="row">@item.RubricId</th>
        <td>
            @item.Name
        </td>
        <td>
            <a asp-controller="Rubric"
               asp-action="Edit" asp-route-id="@item.RubricId">Редактировать</a> |
            <a asp-controller="Rubric"
               asp-action="Delete" asp-route-id="@item.RubricId">Удалить</a>
        </td>
    </tr>
    }
</table>