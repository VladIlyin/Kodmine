@using Kodmine.ViewModel.Topic;

@model Kodmine.Model.Models.Post

@{
    ViewData["Title"] = "Create";
}

@*<h2>Create</h2>*@

<h3>Добавить пост</h3>
<hr />

<script>
    function setToday() {
        var date = new Date();
        var currentDate = date.toISOString().slice(0, 10);
        document.getElementById("CreateDate").value = currentDate;
    }
</script>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PostId" />
    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>&nbsp;<a href="#" onclick="setToday()">Сегодня?</a>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Рубрика</label>
                <select asp-for="RubricId" asp-items="ViewBag.rubListViewModel" id="select-topic-list" class="form-control" onchange="onSelectTopic(this);">
                    <option id="0" hidden disabled selected> -- Выберите рубрику -- </option>
                </select>
                <span asp-validation-for="RubricId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
