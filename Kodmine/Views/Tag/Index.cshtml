@model IEnumerable<Kodmine.Model.Models.Tag>
@{
    ViewData["Title"] = "Tag";
}

<br />
<a asp-controller="Tag" asp-action="Create" class="btn">
    <i class="icon-plus"></i> <span>Добавить</span>
</a>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Действие</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {

        <tr>
            <th scope="row">@item.TagId</th>
            <td>
                @item.Name
            </td>
            <td>
                <a asp-controller="Tag"
                   asp-action="Edit" asp-route-id="@item.TagId">Редактировать</a> |
                <a asp-controller="Tag"
                   asp-action="Delete" asp-route-id="@item.TagId">Удалить</a>
            </td>
        </tr>
    }
</table>